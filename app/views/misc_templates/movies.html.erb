<!DOCTYPE html>
<body>

  <h1>List of all movies</h1>

  <hr>

  <table border="1">
    <tr>
      <th>ID</th>
      <th>Image</th>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th></th>
    </tr>

    <% Movie.all.each do |the_movie| %>
      <tr>
        <td><%= the_movie.id %></td>
        
        <td>
          <img src="<%= the_movie.image %>" style="width:250px;">
        </td>
        
        <td><%= the_movie.title %></td>
        
        <td><%= the_movie.year %></td>
        
        <td><%= the_movie.director.name %></td>
        <td>
          <a href="/movies/<%= the_movie.id %>">Show details</a>
        </td>
      </tr>
    <% end %>
  </table>
</body>
</html>
